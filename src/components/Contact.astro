<script>
  // Script para copiar email al portapapeles
  const copyEmailButton = document.querySelector('a[href="/cv.pdf"]');
  
  if (copyEmailButton) {
    copyEmailButton.addEventListener('click', async (e) => {
      e.preventDefault();
      const email = 'tu-email@example.com'; // Cambia esto por tu email real
      
      try {
        await navigator.clipboard.writeText(email);
        
        // Feedback visual
        const originalText = copyEmailButton.innerHTML;
        copyEmailButton.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg> Â¡Copiado!';
        
        setTimeout(() => {
          copyEmailButton.innerHTML = originalText;
        }, 2000);
      } catch (err) {
        console.error('Error al copiar:', err);
      }
    });
  }
</script>
