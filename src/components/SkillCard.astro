---
// Componente reutilizable para tarjeta de skill
interface Props {
  title: string;
  subtitle: string;
  icon: string;
}

const { title, subtitle, icon } = Astro.props;
---

<div class="bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-lg p-6 hover:border-blue-500/50 transition-colors">
  <div class="text-4xl mb-3">{icon}</div>
  <h3 class="text-2xl font-bold mb-1">{title}</h3>
  <p class="text-gray-400 text-sm">{subtitle}</p>
</div>
