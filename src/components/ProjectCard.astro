---
// Componente reutilizable para tarjeta de proyecto
interface Props {
  title: string;
  description: string;
  image?: string;
  tags: string[];
  demoUrl?: string;
  codeUrl?: string;
  year?: string;
}

const { title, description, image, tags, demoUrl, codeUrl, year } = Astro.props;
---

<article class="group relative bg-gray-800/30 backdrop-blur-sm border border-gray-700 rounded-xl overflow-hidden hover:border-blue-500/50 transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/10">
  <!-- Imagen del proyecto -->
  <div class="relative h-64 bg-gradient-to-br from-gray-700 to-gray-800 overflow-hidden">
    {image ? (
      <img 
        src={image} 
        alt={title}
        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center">
        <svg class="w-24 h-24 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    )}
    
    <!-- Overlay con año -->
    {year && (
      <div class="absolute top-4 right-4 bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
        {year}
      </div>
    )}
  </div>

  <!-- Contenido -->
  <div class="p-6 space-y-4">
    <h3 class="text-2xl font-bold text-white group-hover:text-blue-400 transition-colors">
      {title}
    </h3>

    <p class="text-gray-300 leading-relaxed line-clamp-3">
      {description}
    </p>

    <!-- Tags de tecnologías -->
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="text-xs bg-gray-700/50 text-blue-400 px-3 py-1 rounded-full">
          {tag}
        </span>
      ))}
    </div>

    <!-- Botones de acción -->
    <div class="flex gap-3 pt-2">
      {demoUrl && (
        <a 
          href={demoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex-1 bg-blue-600 hover:bg-blue-700 text-white text-center px-4 py-2 rounded-lg font-medium transition-colors"
        >
          Ver Demo
        </a>
      )}
      {codeUrl && (
        <a 
          href={codeUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex-1 bg-gray-700 hover:bg-gray-600 text-white text-center px-4 py-2 rounded-lg font-medium transition-colors flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Código
        </a>
      )}
    </div>
  </div>
</article>
