---
// Header con navegación sticky
---

<header class="fixed top-0 left-0 right-0 z-50 bg-gray-950/80 backdrop-blur-md border-b border-gray-800">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="#inicio" class="flex items-center gap-2 text-xl font-bold hover:text-blue-400 transition-colors">
        <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center text-white font-bold">
          P
        </div>
        <span class="hidden sm:inline">Portafolio</span>
      </a>

      <!-- Navegación Desktop -->
      <ul class="hidden md:flex items-center gap-8">
        <li><a href="#inicio" class="text-gray-300 hover:text-white transition-colors">Inicio</a></li>
        <li><a href="#sobre-mi" class="text-gray-300 hover:text-white transition-colors">Sobre Mí</a></li>
        <li><a href="#experiencia" class="text-gray-300 hover:text-white transition-colors">Experiencia</a></li>
        <li><a href="#proyectos" class="text-gray-300 hover:text-white transition-colors">Proyectos</a></li>
      </ul>

      <!-- Botón CTA -->
      <div class="flex items-center gap-4">
        <a 
          href="/cv.pdf" 
          download
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition-colors flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span class="hidden sm:inline">Descargar CV</span>
          <span class="sm:hidden">CV</span>
        </a>

        <!-- Botón menú móvil -->
        <button 
          id="mobile-menu-button"
          class="md:hidden p-2 text-gray-300 hover:text-white transition-colors"
          aria-label="Abrir menú"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Menú móvil -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <ul class="flex flex-col gap-4">
        <li><a href="#inicio" class="text-gray-300 hover:text-white transition-colors block">Inicio</a></li>
        <li><a href="#sobre-mi" class="text-gray-300 hover:text-white transition-colors block">Sobre Mí</a></li>
        <li><a href="#experiencia" class="text-gray-300 hover:text-white transition-colors block">Experiencia</a></li>
        <li><a href="#proyectos" class="text-gray-300 hover:text-white transition-colors block">Proyectos</a></li>
      </ul>
    </div>
  </nav>
</header>

<script>
  // Script para toggle del menú móvil
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Cerrar menú al hacer click en un link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
