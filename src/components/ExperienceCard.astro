interface Props {
  title: string;
  company: string;
  period: string;
  description: string;
  achievements?: string[];
  tags?: string[];
  icon?: string;
}

const { title, company, period, description, achievements = [], tags = [], icon = 'ðŸ’¼' } = Astro.props;
---

<div class="relative">
  <!-- Punto en la lÃ­nea -->
  <div class="absolute left-0 top-6 w-3 h-3 bg-blue-500 rounded-full -translate-x-[5px] hidden md:block animate-pulse z-10"></div>

  <!-- Contenido de la tarjeta -->
  <div class="md:ml-8 bg-gray-800/30 backdrop-blur-sm border border-gray-700 rounded-xl p-6 hover:border-blue-500/50 transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/10">
    <!-- Header -->
    <div class="flex items-start justify-between gap-4 mb-4">
      <div class="flex items-start gap-3">
        <div class="text-3xl flex-shrink-0">{icon}</div>
        <div>
          <h3 class="text-xl font-bold text-white">{title}</h3>
          <p class="text-gray-400 font-medium">{company}</p>
        </div>
      </div>
      <span class="text-sm text-blue-400 font-semibold bg-blue-500/10 px-3 py-1 rounded-full whitespace-nowrap">
        {period}
      </span>
    </div>

    <!-- DescripciÃ³n -->
    <p class="text-gray-300 mb-4 leading-relaxed">{description}</p>

    <!-- Logros (si existen) -->
    {achievements.length > 0 && (
      <ul class="space-y-2 mb-4">
        {achievements.map((achievement) => (
          <li class="flex items-start gap-2 text-gray-300 text-sm">
            <svg class="w-5 h-5 text-green-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{achievement}</span>
          </li>
        ))}
      </ul>
    )}

    <!-- Tags de tecnologÃ­as (si existen) -->
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="text-xs bg-gray-700/50 text-gray-300 px-3 py-1 rounded-full">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</div>
